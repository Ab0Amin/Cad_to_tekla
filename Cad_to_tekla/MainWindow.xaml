<Window
         xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cad_to_tekla"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="Cad_to_tekla.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="856.388" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="107*"/>
            <ColumnDefinition Width="685*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="tb_ref" Content="Insert Reference" HorizontalAlignment="Left" Margin="94,51,0,0" VerticalAlignment="Top" Width="76" Grid.ColumnSpan="3"/>
        <Button x:Name="tb_PickLines" Content="Pcik lines" HorizontalAlignment="Left" Margin="94,110,0,0" VerticalAlignment="Top" Width="76" Grid.ColumnSpan="3"/>
        <Button x:Name="tb_modifyModel" Content="Modify Model" HorizontalAlignment="Left" Margin="94,180,0,0" VerticalAlignment="Top" Width="76" Grid.ColumnSpan="3"/>
        <Button x:Name="tb_pickProfile" Content="Pick Profile" HorizontalAlignment="Left" Margin="249,537,0,0" VerticalAlignment="Top" Width="76" Grid.Column="2"/>
        <Button x:Name="tb_save" Content="Save" HorizontalAlignment="Left" Margin="337,51,0,0" VerticalAlignment="Top" Width="76" Grid.Column="2"/>
        <Button x:Name="tb_load" Content="Load" HorizontalAlignment="Left" Margin="482,51,0,0" VerticalAlignment="Top" Width="76" Grid.Column="2"/>
        <ComboBox x:Name="cb_vl_hz" HorizontalAlignment="Left" Margin="93,51,0,0" VerticalAlignment="Top" Width="120" Grid.Column="2">
            <System:String>Virtical "For columns"</System:String>
            <System:String>Horizontal "For Beams"</System:String>
        </ComboBox>
        <ComboBox x:Name="cm_beamAtt" HorizontalAlignment="Left" Margin="93,180,0,0" VerticalAlignment="Top" Width="120" Grid.Column="2"/>

        <DataGrid x:Name="dt_data" ItemsSource="{Binding dataGridItems}" Width="410"  Height="423"    Grid.Column="2" AutoGenerateColumns="False" AlternatingRowBackground="Gray" Margin="249,134,26,268" SelectedCellsChanged="dt_data_SelectedCellsChanged">

            <DataGrid.Columns>


                <DataGridTemplateColumn Width="50" x:Name="Select">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <RadioButton x:Name="SelcetedRadioButtom"   Width="50"  GroupName="status" Checked="SelcetedRadioButtom_Checked" Command="{Binding select}">
                                   
                                </RadioButton>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                  

                    <DataGridTextColumn Binding="{Binding Symbol}" Header="Symbol" Width="150"/>
                <DataGridTextColumn Binding="{Binding TeklaProfiles}"  Header="Tekla Profiles" Width="150"/>

            </DataGrid.Columns>


        </DataGrid>




        <Button x:Name="tb_addRow" Content="Add" HorizontalAlignment="Left" Margin="561,513,0,0" VerticalAlignment="Top" Width="76" Click="tb_addRow_Click" Grid.Column="2"/>

    </Grid>
</Window>
